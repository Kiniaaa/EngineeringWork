@model BeFit.Models.MealOpinion

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły opinii</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Klient
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
            @Html.DisplayFor(model => model.Customer.Surname)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Meal.Name)
