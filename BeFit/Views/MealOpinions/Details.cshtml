            @Html.DisplayNameFor(model => model.MealRate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MealRate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOpinion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOpinion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
