@model IEnumerable<BeFit.Models.MealOpinion>

@{
    ViewBag.Title = "Opinie o posiłkach";
}

<h2>Opinie o posiłkach</h2>

<table class="table">
    <tr>
        <th>
            Klient
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meal.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOpinion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Customer.FirstName + " " + item.Customer.Surname, "Details", "Users", new { id = item.Customer.Id }, string.Empty)
        </td>
        <td>
            @Html.ActionLink(item.Meal.Name.ToString(), "Details", "Meals", new { id = item.Meal.Id }, string.Empty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOpinion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @if (Request.IsAuthenticated)
        {
    <td>
        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
    </td>
        }

    </tr>
}

</table>
