@model IEnumerable<BeFit.Models.Message>

@{
    ViewBag.Title = "Wysłane wiadomości";
}

<h2>Wysłane wiadomości</h2>

<p>
    @Html.ActionLink("Dodaj nową wiadomość", "Create") | 
    @Html.ActionLink("Otrzymane wiadomości", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receiver)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Email)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
