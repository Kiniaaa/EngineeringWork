@model IEnumerable<BeFit.Models.Message>

@{
    ViewBag.Title = "Wiadomości";
}

<h2>Otrzymane wiadomości</h2>

<p>
    @Html.ActionLink("Dodaj nową wiadomość", "Create", new object { }, new { @class = "btn btn-default" }) 
    @Html.ActionLink("Wysłane wiadomości", "Sent", new object { }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sender)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sender.Email)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
