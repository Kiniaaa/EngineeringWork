<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BeFit - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("BeFit", "Index", "Home")</li>
                    <li>@Html.ActionLink("Posiłki", "Index", "Meals")</li>
                    @if (Context.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Użytkownicy", "Index", "Users")</li>
                    }
                    @if (Context.User.IsInRole("Dietetyk"))
                    {
                        <li>@Html.ActionLink("Opinie o posiłkach", "Index", "MealOpinions")</li>
                        <li>@Html.ActionLink("Składniki posiłków", "Index", "MealIngridients")</li>
                        <li>@Html.ActionLink("Produkty", "Index", "Ingridients")</li>
                        <li>@Html.ActionLink("Typy diet", "Index", "TypeOfDiets")</li>
                        <li>@Html.ActionLink("Diety", "Index", "Diets")</li>
                        <li>@Html.ActionLink("Użytkownicy", "Index", "Users")</li>
                        <li>@Html.ActionLink("Wiadomości", "Index", "Messages")</li>
                    }

                    @*<li>@Html.ActionLink("Customer Data", "Index", "CustomerDatas")</li>
        <li>@Html.ActionLink("Diet Meals", "Index", "DietMeals")</li>
        <li>@Html.ActionLink("Diets", "Index", "Diets")</li>
        <li>@Html.ActionLink("Meal Opinions", "Index", "MealOpinions")</li>
        <li>@Html.ActionLink("Physical Activities", "Index", "PhysicalActivities")</li>
        <li>@Html.ActionLink("Type Of Diets", "Index", "TypeOfDiets")</li>
        <li>@Html.ActionLink("Type Of Meals", "Index", "TypeOfMeals")</li>
        <li>@Html.ActionLink("User", "Index", "User")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; BeFit @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
