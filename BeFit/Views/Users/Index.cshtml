@model IEnumerable<BeFit.Models.User>

@{
    ViewBag.Title = "Użytkownicy";
}

<h2>Użytkownicy</h2>

@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Dodaj użytkownika", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().roleName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roleName)
                </td>
                <td>
                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id })
                    }
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })

                </td>
            </tr>
        }

    </table>
